---
interface Props {
	title: string;
}

const { title } = Astro.props;
import SocialLinks from '../components/SocialLinks.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/krishna.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Import Lora font -->
		<link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<nav>
			<div class="nav-container">
				<a href="/" class="logo">Vishesh Tripathi</a>
				<div class="nav-links">
					<a href="/blog">Blog</a>
					<a href="/about">About Me</a>
					<a href="/my-life">My Life</a>
					<a href="/talks">Tech-Talks</a>
				</div>
			</div>
		</nav>
		
		<main>
			<slot />
		</main>
        <footer id="footer">
            <div class="footer-content">
                <SocialLinks />
                <p>Â© {new Date().getFullYear()} Vishesh Tripathi. All rights reserved.</p>
            </div>
        </footer>
	</body>
</html>

<style is:global>
	:root {
        --max-width: 900px;
        --font-main: 'Lora', serif; /* Use Lora as the main font */
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: var(--font-main); /* Apply Lora to the body */
        color: #111;
        background: white;
        line-height: 1.6;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

	html {
        scroll-behavior: smooth;
	}

    nav {
        border-bottom: 1px solid #eee;
        padding: 1rem 0;
        margin-bottom: 2rem;
    }

    .nav-container {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-links {
        font-size: 1.2rem;
        display: flex;
        gap: 2rem;
    }

    footer {
        margin-top: 1rem; /* Reduced margin-top to minimize spacing */
        padding: 1rem 0; /* Adjusted padding for better spacing */
        border-top: 1px solid #eee;
    }

    main {
        flex: 1;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 1rem;
        width: 100%;
    }

    .footer-content {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    footer p {
        color: #666;
    }

	.logo {
    	color: black;
    	font-size: 2rem; 
    	font-weight: bold;
    	text-decoration: none;
  	}

    .logo:hover {
    text-decoration: underline; /* Show underline on hover */
    }

	.nav-links a {
		text-decoration: none;
		color: #111;
	}

	.nav-links a:hover {
		color: #666;
        text-decoration: underline
	}

	img {
		max-width: 100%;
		height: auto;
	}

	.card {
		border: 1px solid #eee;
		padding: 2rem;
		border-radius: 8px;
		margin-bottom: 1.5rem;
		transition: transform 0.2s;
	}

	.card:hover {
		transform: translateY(-2px);
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}
</style>
