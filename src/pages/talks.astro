---

<Layout title="Talks">

	<h1>Invite me to Talk</h1>
	<br>
	<p> Iâ€™m open to sharing my work, knowledge, and experience to benefit the audience. </p>



	<p>
		You can <a href="/about#connect_with_me">contact</a> me for inquiries.
	</p>
	<br>
	<br>


    <h1>Previous Talks</h1>
    
    {talks.map(talk => (
        <div class="talk-card card">
            <TalkCarousel images={talk.images} />
            <div class="talk-info">
                <h2>{talk.title}</h2>
                <p class="location">{talk.location}</p>
                <p class="topic">Topic: {talk.topic}</p>
                <p>{talk.description}</p>
            </div>
        </div>
    ))}
</Layout>

<style>
    .talk-card {
        margin-bottom: 3rem;
    }
    .location, .topic {
        color: #666;
        margin-bottom: 0.5rem;
    }
</style>