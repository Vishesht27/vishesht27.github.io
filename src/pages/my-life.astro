<Layout title="My Life">
    <h1>My Life</h1>
    
    <div class="tabs">
        <button class="tab-btn active" data-tab="books">Books</button>
        <button class="tab-btn" data-tab="articles">Articles</button>
        <button class="tab-btn" data-tab="bucket-list">Bucket List</button>
    </div>

    <div class="tab-content active" id="books">
        <h2>Books I've Read</h2>
        <div class="books-grid">
            {books.map(book => (
                <BookCard {...book} />
            ))}
        </div>
    </div>

    <div class="tab-content" id="articles">
        <h2>Life Articles</h2>
        {articles.map(article => (
            <BlogCard {...article} />
        ))}
    </div>

    <div class="tab-content" id="bucket-list">
        <h2>My Bucket List</h2>
        <p class="bucket-list-progress">
            Things I want to do !! Recommendations are welcome !!<br>
            Progress as of january 1, 2025: {completedTasks}/{totalTasks}
        </p>
        <ul class="bucket-list">
            {bucketList.map(item => (
                <li class={item.completed ? 'completed' : ''}>
                    <input 
                        type="checkbox" 
                        checked={item.completed} 
                        disabled 
                    />
                    <span>{item.task}</span>
                </li>
            ))}
        </ul>
    </div>
</Layout>

<style>
    .tabs {
        display: flex;
        gap: 1rem;
        margin: 2rem 0;
    }
    .tab-btn {
        padding: 0.5rem 1rem;
        border: none;
        background: none;
        cursor: pointer;
        border-bottom: 2px solid transparent;
    }
    .tab-btn.active {
        border-bottom-color: #111;
    }
    .tab-content {
        display: none;
    }
    .tab-content.active {
        display: block;
    }
    .books-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin: 2rem 0;
    }
    .bucket-list-progress {
        margin: 1rem 0;
        padding: 1rem;
        background: #f5f5f5;
        border-radius: 4px;
    }
    .bucket-list {
        list-style: none;
        margin: 1rem 0;
    }
    .bucket-list li {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0;
    }
    .bucket-list li.completed span {
        text-decoration: line-through;
        color: #666;
    }
</style>

<script>
    const tabs = document.querySelectorAll('.tab-btn');
    const contents = document.querySelectorAll('.tab-content');

    tabs.forEach(tab => {
        tab.addEventListener('click', () => {
            const target = tab.dataset.tab;
            
            tabs.forEach(t => t.classList.remove('active'));
            contents.forEach(c => c.classList.remove('active'));
            
            tab.classList.add('active');
            document.getElementById(target)?.classList.add('active');
        });
    });
</script>